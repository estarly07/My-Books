<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerFondo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/containerEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
    >

        <RelativeLayout
            android:id="@+id/btnSelectEdit"
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/edit"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_circulo" />
        </RelativeLayout>

        <Button
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/edt_formularios"
            android:elegantTextHeight="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/_5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSecondary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/btnSelectImg"
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_circulo" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageBookWidthH"
            android:layout_marginTop="@dimen/_5dp" />
    </LinearLayout>

</RelativeLayout>