<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle" >
            <size android:width="100dp" android:height="@dimen/_50dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/transparentePrimary" />
            <corners android:radius="@dimen/_3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <size android:width="100dp" android:height="@dimen/_50dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/primary" />
            <corners android:radius="@dimen/_3dp" />
        </shape>
    </item>
</selector>